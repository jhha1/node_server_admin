<%- include('header'); -%>
<%- include('sidebar'); -%>

<div class="dashboard-wrapper">
    <input type="hidden" name="" id="envValue" value="<%=serverEnv%>">
    <input type="hidden" name="" id="selected_table_name" value="Item">
    <input type="hidden" name="" id="table_list" value="<%=tableList%>">

    <div class="container-fluid dashboard-content">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="row">
                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">

                    <div class="tab-regular">
                        <ul class="nav nav-tabs" id="myTab" role="tablist">
                            <%
                            var tab_list = [
                                {id:"check", name:'서버 데이터 확인 (S3)'},
                                {id:'upload', name:'데이터 업로드'}
                            ];
                            tab_list.forEach((tab) => { %>
                                <li class="nav-item">
                                    <a class="nav-link <% if (tab.id === 'check') { %> active <% } %> " id="<%=tab.id%>-tab" data-toggle="tab" href="#home" role="tab" aria-selected="true"><%=tab.name%></a>
                                    <input type="hidden" name="" id="tabId" value="<%=tab.id%>">
                                </li>
                            <% }); %>
                        </ul>
                        <div class="tab-content" id="myTabContent">
                            <div class="tab-pane fade show active" id="home" role="tabpanel">
                                <div id="tableUploader1" class="card">
                                    <div class="card-header">
                                        테이블 업로드
                                    </div>
                                    <div class="card-body">
                                        <div id="tableUploader"> </div>
                                    </div>
                                    <div class="card-footer">
                                        <div id="buttonGroup" class="input-group-append">
                                            <button class="form-control btn-primary" type="button" id="tableUpload">업로드</button>
                                        </div>
                                    </div>
                                </div>
                                <div id="tableSearch1" class="card">
                                    <div class="card-header">
                                        테이블 선택
                                    </div>
                                    <div class="card-body">
                                        <div class="input-group">
                                            <select name="const_select_table" id="const_select_table"></select>
                                            <input type="hidden" name="" id="table_list" value="<%=tableList%>">
                                            <div class="input-group-append ml-2">
                                                <button id="tableSearch" type="button" class="form-control btn-primary">검색</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div id="constTableList" class="card">
                                    <div class="card-header">
                                        테이블 데이터
                                    </div>
                                    <div class="card-body">
                                        <div class="table-responsive">
                                            <table id="const_table" class="table table-striped table-bordered first">
                                                <thead></thead>
                                                <tbody></tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('loader'); -%>
<%- include('footer'); -%>